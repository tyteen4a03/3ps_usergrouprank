  <admin_templates>
    <template title="3ps_usergroup_ranks_delete"><![CDATA[<xen:title>{xen:phrase 3ps_usergroup_ranks_confirm_deletion_of_usergroup_rank}: {xen:phrase 3ps_usergroup_ranks_rank_id} {$userGroupRankId}</xen:title>
<xen:h1>{xen:phrase 3ps_usergroup_ranks_confirm_deletion_of_usergroup_rank}</xen:h1>

<xen:navigation>
	<xen:breadcrumb href="{xen:adminlink '3ps-usergroup-ranks/delete', $userGroupRankId}">{$userGroupRankId}</xen:breadcrumb>
</xen:navigation>

<xen:require css="delete_confirmation.css" />

<xen:form action="{xen:adminlink '3ps-usergroup-ranks/delete', $userGroupRankId}" class="deleteConfirmForm formOverlay">

	<p>{xen:phrase 3ps_usergroup_ranks_delete_rank_confirm}:</p>
	<strong><a href="{xen:adminlink '3ps-usergroup-ranks/edit', $userGroupRankId}">{xen:raw $userGroupRankContent} ({xen:phrase 3ps_usergroup_ranks_rank_id}: {$userGroupRankId})</a></strong>

	<xen:submitunit save="{xen:phrase 3ps_usergroup_ranks_delete_usergroup_rank}" />
	<input type="hidden" name="rid" value="{$userGroupRankId}" />
	<input type="hidden" name="_xfConfirm" value="1" />
</xen:form>]]></template>
    <template title="3ps_usergroup_ranks_edit"><![CDATA[<xen:title>{xen:if '{$userGroupRank.rid}', '{xen:phrase 3ps_usergroup_ranks_edit_usergroup_rank}: {xen:phrase 3ps_usergroup_ranks_rank_id} {$userGroupRank.rid}', '{xen:phrase 3ps_usergroup_ranks_create_usergroup_rank}'}</xen:title>

<xen:form action="{xen:adminlink '3ps-usergroup-ranks/save', $userGroupRank}">

	<fieldset>
		<xen:checkboxunit label="">
			<xen:option name="rank_active" selected="{$userGroupRank.rank_active}">{xen:phrase 3ps_usergroup_ranks_rank_is_active}</xen:option>
		</xen:checkboxunit>
		<xen:selectunit name="rank_type" label="{xen:phrase 3ps_usergroup_ranks_rank_type}" value="{$userGroupRank.rank_type}">
			<xen:option value="0" selected="{$userGroupRank.rank_type} == 0">{xen:phrase image}</xen:option>
			<xen:option value="1" selected="{$userGroupRank.rank_type} == 1">{xen:phrase text}</xen:option>
			<xen:explain>{xen:phrase 3ps_usergroup_ranks_rank_type_explain}</xen:explain>
		</xen:selectunit>
		<xen:checkboxunit id="rank_showforugs" label="{xen:phrase 3ps_usergroup_ranks_show_rank_for_usergroups}:" name="rank_usergroup[]" listclass="checkboxColumns">
			<xen:hint><br /><label><input type="checkbox" class="CheckAll" data-target="#rank_showforugs" /> {xen:phrase select_all}</label></xen:hint>
			<xen:options source="$userGroupOptions" />
		</xen:checkboxunit>
		<xen:textboxunit label="{xen:phrase 3ps_usergroup_ranks_rank_content}:" name="rank_content" value="{$userGroupRank.rank_content}">
			<xen:explain>{xen:phrase you_may_use_html}</xen:explain>
		</xen:textboxunit>
		<xen:selectunit name="rank_display_condition" label="{xen:phrase 3ps_usergroup_ranks_rank_display_condition}" value="{$userGroupRank.rank_display_condition}">
			<xen:option value="0" selected="{$userGroupRank.rank_display_condition} == 0">{xen:phrase always}</xen:option>
			<xen:option value="1" selected="{$userGroupRank.rank_display_condition} == 1">{xen:phrase 3ps_usergroup_ranks_if_dsp_is_highest}</xen:option>
			<xen:option value="2" selected="{$userGroupRank.rank_display_condition} == 2">{xen:phrase 3ps_usergroup_ranks_if_ug_is_primary}</xen:option>
			<xen:option value="3" selected="{$userGroupRank.rank_display_condition} == 3">{xen:phrase 3ps_usergroup_ranks_if_ug_is_primary_or_dsp_is_highest}</xen:option>
			<xen:option value="4" selected="{$userGroupRank.rank_display_condition} == 4">{xen:phrase 3ps_usergroup_ranks_if_ug_is_primary_and_dsp_is_highest}</xen:option>
		</xen:selectunit>
		<!--<xen:spinboxunit label="{xen:phrase 3ps_usergroup_ranks_display_style_priority_limit}:" name="rank_styling_priority_limit" value="{$userGroupRank.rank_style_priority_limit}" min="0">
			<xen:explain>{xen:phrase 3ps_usergroup_ranks_display_style_priority_limit_explain}</xen:explain>
		</xen:spinboxunit>-->
	</fieldset>

	<xen:submitunit save="{xen:phrase 3ps_usergroup_ranks_save_usergroup_rank}"></xen:submitunit>

</xen:form>]]></template>
    <template title="3ps_usergroup_ranks_list"><![CDATA[<xen:title>{xen:phrase 3ps_usergroup_ranks_usergroup_ranks_list}</xen:title>

<xen:topctrl>
